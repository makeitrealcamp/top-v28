// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tweet {
  id        String    @id @default(uuid()) @db.Uuid
  content   String
  photo     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  user      User      @relation(fields: [userId], references: [id])
  userId    String    @db.Uuid
  comments  Comment[]
  likes     Like[]
}

model User {
  id           String    @id @default(uuid()) @db.Uuid
  name         String
  username     String    @unique
  email        String    @unique
  biography    String?
  location     String?
  profilePhoto String?
  password     String
  active       Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime?
  tweets       Tweet[]
  comments     Comment[]
  likes        Like[]
}

model Comment {
  id        String    @id @default(uuid()) @db.Uuid
  content   String
  photo     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  user      User      @relation(fields: [userId], references: [id])
  userId    String    @db.Uuid
  tweet     Tweet     @relation(fields: [tweetId], references: [id])
  tweetId   String    @db.Uuid
}

model Like {
  user      User      @relation(fields: [userId], references: [id])
  userId    String    @db.Uuid
  tweet     Tweet     @relation(fields: [tweetId], references: [id])
  tweetId   String    @db.Uuid
  updatedAt DateTime?

  @@id([userId, tweetId])
}
